<!DOCTYPE html>

<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>Program Record Entry</title>
	<link rel="stylesheet" href="../styles/currentAttendance.css" />
	<link rel="stylesheet" href="../styles/header.css" />
	<link rel="stylesheet" href="../styles/footer.css" />
	<link rel="stylesheet" href="../styles/tableDesign.css" />

	<script src="../scripts/currentAttendanceUP.js"></script>
	
</head>

<body>
	<%- include('../partials/header.ejs')%>

		<div class="entry">
			<div class="entry1">
				<!-- code for archive record -->

	<%- include('../partials/archive.ejs')%>

				<!--	code for current date attendance list	-->

				<div class="fbar">
					<%=classData[0].program_name %> - <%=classData[0].class_name%> - <%= classData[0].section_name%>
				</div>

				<div class="search">
					<div class="search1">
						<form action="/updateAttendance/update" method="post">
						<table class="attendance-table">
							<input type="submit" value="save" id="savebutton" name="save"><br>
							<thead><tr>
								<th>Select Roll_No</th>
								<th>Select Date</th>
								<th>Action</th>
								<th>Update</th>
							</tr></thead>
							<tbody>
							
							
								<tr>
									<td> 
										<select class="classno" name="enroll_no" id="" >
											<% classData.forEach((row, index)=> { %>
												<option value="<%= row.enrollment_id%>">
													<%=row.inter_bs%> - <%=row.class_no%> - <%=row.year%>
												</option>
											<%})%>
										</select>
									</td>
									<td>
										<input class="selectdate" id="selectdate" type="date" value="" name="selectdate" >
									</td>
									<td>
										<select class="classno" name="status" id="" >
											<option value="L">
												Leave
											</option>
											<option value="A">
												Absent
											</option>
											<option value="P">
												Present
											</option>
										</select>
									</td>
									<td>
										<button class="btnGreen" name="update">
											UPDATE
										</button>
									</td>
									
								</tr>
							
							</tbody></table>
							<input type="hidden" name="psfid" value="<%=psfid%>">
							</form>	
					</div>
				</div>

			</div>
		</div>

		<%- include('../partials/footer.ejs')%>
			<script src="../scripts/dashboardScript.js">
			</script>

</body>

</html>